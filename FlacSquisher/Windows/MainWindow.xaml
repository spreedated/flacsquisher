<Window x:Class="FlacSquisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlacSquisher"
        mc:Ignorable="d"
        Title="MainWindow" Height="423" Width="555" MinWidth="555" MinHeight="330" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox x:Name="GRP_Directories" Header="Directories" Height="110" Width="410" Margin="10,36,0,0" HorizontalAlignment="Left" d:LayoutOverrides="Width, Height" VerticalAlignment="Top">
            <Grid>
                <Label Content="FLAC Directory" Width="304" Height="20" HorizontalAlignment="Left" Margin="2,2,0,0" d:LayoutOverrides="VerticalAlignment" VerticalAlignment="Top" Padding="0"/>
                <TextBox x:Name="TXT_FLACDirectory" Text="" Margin="2,22,0,0" Height="20" d:LayoutOverrides="Height" VerticalAlignment="Top" HorizontalAlignment="Left" Width="304" />
                <Button x:Name="BTN_Change_FLACDirectory" Content="Change..." Height="20" Margin="311,22,0,0" Width="77" HorizontalAlignment="Left" d:LayoutOverrides="Width, Height" VerticalAlignment="Top" Click="BTN_Change_Directory_Click"/>
                <Label Content="Output Directory" Width="304" Height="20" HorizontalAlignment="Left" Margin="2,42,0,0" VerticalAlignment="Top" Padding="0"/>
                <TextBox x:Name="TXT_OutputDirectory" Text="" Margin="2,62,0,0" Height="20" d:LayoutOverrides="Height" VerticalAlignment="Top" HorizontalAlignment="Left" Width="304" />
                <Button x:Name="BTN_Change_OutputDirectory" Content="Change..." Height="20" Margin="311,62,0,0" Width="77" HorizontalAlignment="Left" d:LayoutOverrides="Width, Height" VerticalAlignment="Top" Click="BTN_Change_Directory_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="GRP_EncoderOptions" Header="Encoder Options" Height="216" Width="410" Margin="10,151,0,0" d:LayoutOverrides="Width" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid>
                <Label Content="Encoder" Width="304" Height="20" HorizontalAlignment="Left" Margin="2,2,0,0" d:LayoutOverrides="VerticalAlignment" VerticalAlignment="Top" Padding="0"/>
                <ComboBox x:Name="CMB_Encoder" Text="" Margin="2,22,0,0" Height="22" d:LayoutOverrides="HorizontalAlignment, Height" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172" SelectedIndex="0" SelectionChanged="CMB_Encoder_SelectionChanged"/>
                <GroupBox x:Name="GRP_LAME_Options" Header="LAME Options" VerticalAlignment="Top" HorizontalAlignment="Left" Width="386" Margin="2,49,0,0" Height="72">
                    <Grid>
                        <Label Content="MP3_Bitrate (kbit/s)" Width="304" Height="20" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Padding="0" d:LayoutOverrides="VerticalAlignment"/>
                        <ComboBox x:Name="CMB_MP3_Bitrate" Text="" Margin="5,25,0,0" Height="22" d:LayoutOverrides="HorizontalAlignment" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172" SelectedIndex="0"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <Button x:Name="BTN_Encode" Content="Encode !" Height="20" Margin="425,206,0,0" Width="104" HorizontalAlignment="Left" d:LayoutOverrides="Height" VerticalAlignment="Top" Click="BTN_Encode_Click"/>
        <Button x:Name="BTN_Exit" Content="Exit" Height="20" Margin="425,231,0,0" Width="104" HorizontalAlignment="Left" d:LayoutOverrides="Height" VerticalAlignment="Top" Click="BTN_Exit_Click"/>
        <StatusBar Margin="0,0,0,0" Background="Transparent" Height="23" VerticalAlignment="Bottom">
            <StatusBarItem Content="Ready" />
            <Separator Margin="5,5,5,5" Width="1" HorizontalAlignment="Left"/>
        </StatusBar>
    </Grid>
</Window>
