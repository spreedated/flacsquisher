<UserControl x:Class="FlacSquisher.UserControls.UC_MP3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlacSquisher.UserControls"
             mc:Ignorable="d" Height="179" Width="386">
    <Grid>
        <GroupBox x:Name="GRP_LAME_Options" Header="LAME Options" HorizontalAlignment="Center" Width="366" Margin="0,10,0,34">
            <Grid>
                <Label Content="MP3_Bitrate (kbit/s)" Width="304" Height="20" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" Padding="0" d:LayoutOverrides="VerticalAlignment"/>
                <ComboBox x:Name="CMB_MP3_Bitrate" Text="" Margin="5,25,0,0" Height="22" d:LayoutOverrides="HorizontalAlignment" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172" SelectionChanged="CMB_MP3_Bitrate_SelectionChanged"/>
                <Label Content="Mode" Width="304" Height="20" HorizontalAlignment="Left" Margin="5,56,0,0" VerticalAlignment="Top" Padding="0"/>
                <ComboBox x:Name="CMB_MP3_Mode" Text="" Margin="5,76,0,0" Height="22" d:LayoutOverrides="HorizontalAlignment" VerticalAlignment="Top" HorizontalAlignment="Left" Width="172"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
